<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jonfhancock.accelfun"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light" >
        <activity
            android:name=".AccelFunActivity"
            android:label="Accelerometer Rotation"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MoveActivity"
            android:label="Accelerometer Movement"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".BothActivity"
            android:label="Accelerometer Movement and Rotation"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>